@model Cinema.WEB.Models.MovieModels.MovieVms.MovieVm

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10 mt-3 mb-3">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 d-flex justify-content-center align-items-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img id="preview" src="@Model.ImageUrl" alt="movie img" class="img-fluid rounded" style="object-fit:cover; height: 100%;">
                            }
                            else
                            {
                                <img id="preview" src="\images\default_icon.png" class="img-fluid rounded" style="object-fit: contain;">
                            }
                        </div>
                        <div class="col-lg-9">
                            <div class="col mt-md-1">
                                <h4>@Model.Title</h4>
                            </div>
                            <div class="col">
                                <span><b>Год выпуска:</b></span>
                                @Model.ReleaseYear
                            </div>
                            <div class="col mt-1">
                                <span><b>Страна:</b></span>
                                @Model.Country
                            </div>
                            <div class="col mt-1">
                                <span><b>Жанр:</b></span>
                                @Model.Genre.Name
                            </div>
                            <div class="col mt-1">
                                <span><b>Продолжительность:</b></span>
                                @Model.RuntimeInMinutes мин.
                            </div>
                            <div class="col mt-1">
                                <span><b>Режиссёр:</b></span>
                                @string.Join(", ", Model.Directors.Select(d => $"{d.FirstName} {d.LastName}"))
                            </div>
                            <div class="col mt-1">
                                <span><b>Сценарий:</b></span>
                                @string.Join(", ", Model.Screenwriters.Select(s => $"{s.FirstName} {s.LastName}"))
                            </div>
                            <div class="col mt-1">
                                <span><b>Актёры:</b></span>
                                @string.Join(", ", Model.Actors.Select(a => $"{a.FirstName} {a.LastName}"))
                            </div>
                            <div class="col mt-1">
                              <span><b>Качество:</b></span>
                                .mp4
                            </div>
                        </div>  
                    </div>
                    <div class="col-12">
                        <h5 class="mt-3">Описание</h5>
                        @Html.Raw(Model.Description)
                    </div>
                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                    {
                        <div class="row mt-3">
                            <div class="col-12 col-md-8 offset-md-2 col-lg-10 offset-lg-1 text-center">
                                <div class="embed-responsive embed-responsive-16by9">
                                    <video class="embed-responsive-item" controls controlsList="nodownload" style="max-width: 100%; max-height: 100%;">
                                        <source src="@Model.VideoUrl" alt="movie video" type="video/mp4">
                                    </video>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<button id="scroll-to-top-btn" class="btn btn-primary btn-floating"><i class="bi bi-arrow-up-circle"></i></button>