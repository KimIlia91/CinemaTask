@using Cinema.WEB.Models.GenreModels.GenreVms;
@model IEnumerable<GenreVm>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="row justify-content-between">
                <div class="col-md-auto">
                    <p>
                        <a asp-controller="Genre" asp-action="GenreCreate" class="btn btn-success shadow"><i class="bi bi-plus-square"></i></a>
                    </p>

                </div>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover col-md-6 fixed-table">
                            <thead>
                                <tr>
                                    <th width="50%" class="text-center align-middle">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th width="50%" class="text-center align-middle">Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var genre in Model)
                                {
                                    <tr>
                                        <td class="text-center align-middle">@genre.Name</td>
                                        <td class="text-center align-middle">
                                            <a asp-controller="Genre" asp-action="GenreUpdate" asp-route-id="@genre.Id" class="btn btn-success m-1"><i class="bi bi-pencil-square"></i></a>
                                            <a asp-controller="Genre" asp-action="GenreDelete" asp-route-id="@genre.Id" class="btn btn-danger delete-btn"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<button id="scroll-to-top-btn" class="btn btn-primary btn-floating"><i class="bi bi-arrow-up-circle"></i></button>
