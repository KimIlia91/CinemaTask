@model Cinema.WEB.Models.PersonModels.PersonVms.PersonCreateVm

@{
    ViewData["Title"] = "PersonCreate";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10 mt-3 mb-3">
            <div class="card shadow">
                <div class="card-body">
                    <form class="col-md-auto" method="post" asp-action="PersonCreate" enctype="multipart/form-data">
                        <div class="p-3 row">

                            <center>
                                <h1>Добавить</h1>
                            </center>
                            <hr />
                            <div class="col-12 pb-2">

                                <div class="row">
                                    <div class="col-12 col-md-3 d-flex justify-content-center lign-items-center" style="max-width: 400px; height: 200px;">
                                        @if (!string.IsNullOrEmpty(Model.Person.ImageUrl))
                                        {
                                            <img id="preview" src="@Model.Person.ImageUrl" class="img-fluid rounded" alt="person img" style="object-fit:contain; background-color: #fff;">
                                        }
                                        else
                                        {
                                            <img id="preview" src="\images\persons\default_person_icon.png" alt="person img" class="img-fluid rounded" style="object-fit: contain; background-color: #fff;">
                                        }
                                    </div>

                                    <div class="col-12 col-md-9">
                                        <div class="row mt-2">
                                            <div class="col">
                                                <label asp-for="Person.LastName" class="control-label m-1"></label>
                                                <input asp-for="Person.LastName" class="form-control" />
                                                <span asp-validation-for="Person.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="row mt-3 d-flex align-items-center">
                                            <div class="col">
                                                <label asp-for="Person.FirstName" class="control-label m-1"></label>
                                                <input asp-for="Person.FirstName" class="form-control" />
                                                <span asp-validation-for="Person.FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row  mt-3">
                                    <div class="col-12 col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Person.DateOfBirth" class="control-label m-1"></label>
                                            <input asp-for="Person.DateOfBirth" class="form-control" type="date" />
                                            <span asp-validation-for="Person.DateOfBirth" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="mb-3">
                                            <label asp-for="Person.Age" class="control-label m-1"></label>
                                            <input asp-for="Person.Age" class="form-control" />
                                            <span asp-validation-for="Person.Age" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col-12 col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Person.Country" class="control-label m-1"></label>
                                            <input asp-for="Person.Country" class="form-control" />
                                            <span asp-validation-for="Person.Country" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="mb-3">
                                            <label asp-for="Person.ImageUrl" class="control-label m-1"></label>
                                            <input asp-for="ImageFile" type="file" id="fileInput" onchange="previewImage()" alt="person img" accept="image/jpeg" class="form-control">
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row justify-content-center align-items-center" style="margin-top: 10px; margin-bottom: 10px;">
                                    <div class="col-md-auto">
                                        <div class="mb-3">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Person.IsDirector" /> @Html.DisplayNameFor(model => model.Person.IsDirector)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-auto">
                                        <div class="mb-3">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Person.IsScreenwriter" /> @Html.DisplayNameFor(model => model.Person.IsScreenwriter)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-auto">
                                        <div class="mb-3">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Person.IsActor" /> @Html.DisplayNameFor(model => model.Person.IsActor)
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <button type="submit" class="btn btn-primary col-12">Добавить</button>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="mb-3">
                                            <a asp-controller="Person" asp-action="PersonIndex" class="btn btn-danger col-12">
                                                Назад
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<button id="scroll-to-top-btn" class="btn btn-primary btn-floating"><i class="bi bi-arrow-up-circle"></i></button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_PreviewImagePartial");
    }
}
